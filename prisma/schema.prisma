// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id            Int       @id @default(autoincrement())
  name          String
  boxSizeNumber Int
  boxSizeUnit   String
  endDate       String
  wakeupTime    String
  userEmail     String
  areas         Area[]
  timeboxes     TimeBox[]
}

model Area {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  timeboxes   TimeBox[]
  schedule    Schedule  @relation(fields: [scheduleID], references: [id])
  scheduleID  Int
}

model TimeBox {
  id                Int               @id @default(autoincrement())
  title             String
  description       String
  date              String
  startTime         String
  endTime           String
  numberOfBoxes     Int
  recordedTimeBoxes RecordedTimeBox[]
  area              Area?             @relation(fields: [areaID], references: [id])
  areaID            Int?
  schedule          Schedule?         @relation(fields: [scheduleID], references: [id])
  scheduleID        Int?
}

model RecordedTimeBox {
  id                Int      @id @default(autoincrement())
  recordedStartTime DateTime
  recordedEndTime   DateTime
  timeBox           TimeBox  @relation(fields: [timeBoxID], references: [id])
  timeBoxID         Int
}
